<import src="../template/template.wxml" />
<!-- 笑话 -->
<view class="swiper-tab">
   <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="switchNav">推荐</view>
   <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="switchNav">文字</view>
   <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="switchNav">图片</view>
   <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="switchNav">GIF</view>
   <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" bindtap="switchNav">视频</view>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight-31}}px"
        bindchange="swiperChange">
    <!--推荐-->
   <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" >
          <scroll class="scroll-box" scroll-y="true" upper-threshold="50" lower-threshold="50"
                  bindscrolltolower="scrollToBottom">
            <template is="joke_tpl" data="{{item}}" wx:for="{{hotDataList}}" wx:key="sid"/>
          </scroll>
      </scroll-view>
   </swiper-item>
    <!--文本-->
   <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" >
          <scroll class="scroll-box" scroll-y="true" upper-threshold="50" lower-threshold="50"
                  bindscrolltolower="scrollToBottom">
            <template is="joke_tpl" data="{{item}}" wx:for="{{textDataList}}" wx:key="sid"/>
          </scroll>
      </scroll-view>
   </swiper-item>
    <!--图片-->
   <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" >
          <scroll class="scroll-box" scroll-y="true" upper-threshold="50" lower-threshold="50"
                  bindscrolltolower="scrollToBottom">
            <template is="joke_tpl" data="{{item}}" wx:for="{{imageDataList}}" wx:key="sid"/>
          </scroll>
      </scroll-view>
   </swiper-item>
    <!--GIF-->
   <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" >
          <scroll class="scroll-box" scroll-y="true" upper-threshold="50" lower-threshold="50"
                  bindscrolltolower="scrollToBottom">
            <template is="joke_tpl" data="{{item}}" wx:for="{{gifDataList}}" wx:key="sid"/>
          </scroll>
      </scroll-view>
   </swiper-item>
    <!--视频-->
   <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" >
          <scroll class="scroll-box" scroll-y="true" upper-threshold="50" lower-threshold="50"
                  bindscrolltolower="scrollToBottom">
            <template is="joke_tpl" data="{{item}}" wx:for="{{videoDataList}}" wx:key="sid"/>
          </scroll>
      </scroll-view>
   </swiper-item>
</swiper>

