<import src="../template/template.wxml" />
<!-- 趣图 -->
<view class="swiper-tab">
   <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">推荐</view>
   <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">最新</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
   <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" >
          <scroll class="scroll-box" scroll-y="true" upper-threshold="50" lower-threshold="50" >
            <template is="pic_tpl" data="{{item}}" wx:for="{{req}}" />
          </scroll>
      </scroll-view>
   </swiper-item>
   <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h" >
          <scroll class="scroll-box" scroll-y="true" upper-threshold="50" lower-threshold="50" >
            <template is="pic_tpl" data="{{item}}" wx:for="{{req}}" />
          </scroll>
      </scroll-view>
   </swiper-item>
</swiper>