/*模板样式*/
.list-item {
    background-color: #fff;
    margin: 10rpx 0;
    padding: 10rpx;
    font-size: 20rpx;
}
.item-header {
    display: flex;
    justify-content: left;
    padding: 0 10rpx;
}
.header-title{
    width: 100%;
}
.item-header-jd{
    display: flex;
    justify-content: center;
    padding: 0 10rpx;
}
.header-img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80px;
    overflow: hidden;
    margin-right: 10rpx;
}
.header-name {
    line-height: 36rpx;
    font-size: 24rpx;
    color: darkorange;
    margin-bottom: 5rpx;
}
.header-name-jd{
    text-align: center;
    line-height: 36rpx;
    font-size: 28rpx;
    color: darkorange;
    margin-bottom: 5rpx;
}
.header-time {
    line-height: 36rpx;
    font-size: 22rpx;
    color: #9e9e9e;
}
.header-src {
    line-height: 36rpx;
    font-size: 22rpx;
    color: #9e9e9e;
}
.header-time-jd{
    text-align: center;
    line-height: 36rpx;
    font-size: 22rpx;
    color: #9e9e9e;
}
.header-content{
    display: flex;
    justify-content: space-between;
    width: 100%;
}
.item-body {
    padding: 20rpx 10rpx;
    font-size: 24rpx;
}
.body-img {
    display: block;
    margin-top: 10rpx;
    width: 100%;
    height: 280rpx;
}
.item-comment{
    background-color: #f2f2f2;
    margin: 0 10rpx;
    padding: 10rpx;
    border-radius: 8rpx;
    font-size: 20rpx;
}
.godComment{
    background-color: #ff557a;
    padding: 2rpx 8rpx;
    border-radius: 10rpx;
    color: white;margin-right: 10rpx;
}
.scroll-box {
    height: auto;
    background-color: #eee;
}